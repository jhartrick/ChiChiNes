{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist/chichi",
    //"outFile": "../dist/chichi.js",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "../lib/chichi",
    "moduleResolution": "node",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "dom",
      "es2017"
    ]
  },
  
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ]
}
